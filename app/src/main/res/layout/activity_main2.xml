<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/greybg1"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/subb2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="160dp"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:gravity="center"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etsv2" />

    <EditText
        android:id="@+id/etfv2"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:gravity="center"
        android:hint="enter value"
        android:inputType="numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvans2" />

    <EditText
        android:id="@+id/etsv2"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:gravity="center"
        android:hint="enter value"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.838"
        app:layout_constraintStart_toEndOf="@+id/etfv2"
        app:layout_constraintTop_toBottomOf="@+id/tvans2" />

    <TextView
        android:id="@+id/tvans2"
        android:layout_width="323dp"
        android:layout_height="157dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="5dp"
        android:background="#434242"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/valdis2"
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="60dp"
        android:gravity="clip_horizontal"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/modedis2"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="you are supposed to enter signed values"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etsv2" />

    <Button
        android:id="@+id/addb2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:gravity="center"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etfv2" />

    <Button
        android:id="@+id/mulb2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:background="#000000"
        android:gravity="center"
        android:text="*"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addb2" />

    <Button
        android:id="@+id/divb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:background="#000000"
        android:gravity="center"
        android:text="/"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/mulb2"
        app:layout_constraintTop_toBottomOf="@+id/subb2" />

    <Button
        android:id="@+id/changemode2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="132dp"
        android:gravity="center"
        android:text="DECIMAL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etsv2" />

</androidx.constraintlayout.widget.ConstraintLayout>
